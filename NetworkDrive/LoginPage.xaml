<Page x:Class="NetworkDrive.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetworkDrive"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="LoginPage">

    <Grid>
        <StackPanel>
            <TextBox Name="ConnectionString" Text="Connection String" Margin="50,50" />
            <Button Name="Submit" Content="Submit" Margin="50,0" Click="Submit_Click" />
        </StackPanel>
    </Grid>
</Page>
